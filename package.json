{
  "name": "discord-crosspost-auto-translate",
  "version": "2.0.0",
  "description": "Automatically translates and replies to cross-posted messages.",
  "homepage": "https://github.com/book000/discord-crosspost-auto-translate",
  "bugs": {
    "url": "https://github.com/book000/discord-crosspost-auto-translate/issues"
  },
  "license": "MIT",
  "author": "Tomachi <tomachi@tomacheese.com>",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:book000/discord-crosspost-auto-translate.git"
  },
  "scripts": {
    "lint:prettier": "prettier --check src",
    "dev": "tsx watch ./src/main.ts",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint . --ext ts,tsx",
    "test": "jest --runInBand --passWithNoTests --detectOpenHandles --forceExit",
    "fix:eslint": "eslint . --ext ts,tsx --fix",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "start": "tsx ./src/main.ts",
    "fix:prettier": "prettier --write src",
    "fix": "run-z fix:prettier fix:eslint"
  },
  "devDependencies": {
    "@book000/node-utils": "1.10.2",
    "@types/jest": "29.5.8",
    "@types/node": "20.9.1",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "axios": "1.6.2",
    "discord.js": "14.14.1",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-n": "16.3.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-unicorn": "49.0.0",
    "jest": "29.7.0",
    "jest-expect-message": "1.1.3",
    "prettier": "3.1.0",
    "run-z": "2.0.0",
    "ts-jest": "29.1.1",
    "tsx": "4.1.3",
    "typescript": "5.2.2"
  },
  "packageManager": "pnpm@8.10.5",
  "jest": {
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  }
}
